%h1 Busca
= form_tag search_path, :method => "get" do
  = text_field_tag :search, params[:search]
  = submit_tag "Buscar"

- if @manuals != nil
  - @manuals.each do |manual|
    %ul
      Tipo:
      = manual.tipo
      %br
      Marca:
      =  manual.marca
      %br
      Modelo:
      =  manual.modelo
      %br
      CÃ³digo:
      =  manual.codigo
      %br
      Manual id:
      = manual.id
      %br
      = link_to "Abrir Manual", :controller => "manuals", :action => "show", :id => manual.id
      %br
      - if manual.path.attached?
        = link_to "Download", manual.path, download: ""
- else